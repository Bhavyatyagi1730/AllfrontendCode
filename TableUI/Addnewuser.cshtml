@model IEnumerable<Model.Usertable>

@{
    ViewBag.Title = "Addnewuser";
    Layout="~/Views/Shared/_CommonLayout.cshtml";
}

<link href="~/Content/Sidebar.css" rel="stylesheet" />




<div class="table-wrapper">
    <table class="fl-table">

        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.User_Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Roletype)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Department)
                </th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.User_Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Roletype)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department)
                    </td>
                    <td class="designedit">
                        @Html.ActionLink("Edit", "Edit", new { id = item.User_Id }, new { id = "tiid" })

                        @Html.ActionLink("Delete", "Delete", new { id = item.User_Id }, new { id = "deletebutton" })
                    </td>
                </tr>
            }

        </tbody>

    </table>
</div>









